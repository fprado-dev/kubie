{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "",
    "paths": {
      "@kubie/*": [
        "app/*"
      ],
      "@kubie/hooks/*": [
        "hooks/*"
      ],
      "@kubie/components/*": [
        "components/*"
      ],
      "@kubie/types/*": [
        "types/*"
      ],
      "@kubie/reducers/*": [
        "reducers/*"
      ],
      "@kubie/utils/*": [
        "utils/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/page.jsx",
    "pages/_app.jsx",
    "app/auth/AuthContext.jsx",
    "app/layout.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}